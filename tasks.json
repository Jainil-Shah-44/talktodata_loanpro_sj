{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Start Backend Server",
      "type": "shell",
      "command": "cd ${workspaceFolder}/backend && uvicorn app.main:app --reload",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "servers"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Start Frontend Server (Development)",
      "type": "shell",
      "command": "cd ${workspaceFolder}/frontend && npm run dev",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "servers"
      },
      "problemMatcher": [],
      "isBackground": true
    },
    {
      "label": "Build Frontend",
      "type": "shell",
      "command": "cd ${workspaceFolder}/frontend && npm run build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Frontend Server (Production)",
      "type": "shell",
      "command": "cd ${workspaceFolder}/frontend && npm run start",
      "presentation": {
        "reveal": "always",
        "panel": "new",
        "group": "servers"
      },
      "problemMatcher": [],
      "isBackground": true,
      "dependsOn": ["Build Frontend"]
    },
    {
      "label": "Start All Servers (Development)",
      "dependsOn": ["Start Backend Server", "Start Frontend Server (Development)"],
      "problemMatcher": []
    },
    {
      "label": "Start All Servers (Production)",
      "dependsOn": ["Start Backend Server", "Start Frontend Server (Production)"],
      "problemMatcher": []
    }
  ]
}
